const { PrismaClient } = require('@prisma/client');

const prisma = new PrismaClient();

module.exports = async function main() {
  // ... you will write your Prisma Client queries here
  const incidents = await prisma.post.findMany({
    where: { published: true, category: { name: 'incident' } },
    orderBy: { publishedAt: 'desc' },
    take: 100,
  });

  const transformed = incidents.map((i) => {
    return {
      templateContent: i.content,
      url: '/incident/' + i.slug,
      data: {
        date: i.publishedAt,
        title: i.title,
        slug: i.slug,
      },
      ...i,
    };
  });

  transformed.monthList = transformed.reduce((acc, cur) => {
    const date = new Date(cur.publishedAt);
    const yearMonth = date.toISOString().slice(0, 7);
    acc[yearMonth] = acc[yearMonth] || [];
    acc[yearMonth].push(cur);
    return acc;
  }, {});

  console.log('loaded', incidents.length, 'incidents');
  // console.log(incidents[0]);
  prisma.$disconnect();
  return transformed;
};
